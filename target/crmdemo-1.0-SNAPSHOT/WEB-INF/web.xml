<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  
  <!--配置欢迎页-->
  <welcome-file-list>
    <!--/代表前端的根路径-->
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>
  <!--过滤器：解决中文乱码问题-->
  <!--如果只定义filter过滤器，那么这个过滤器一点作用都没有-->
  <filter>
    <!--过滤器的名称-->
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <!--参数-->
    <!--encodingFilter(String encoding){}-->
    <init-param>
      <!--参数名称-->
      <param-name>encoding</param-name>
      <!--参数的值-->
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <!--定义完过滤器之后，还需要对过滤器进行映射，只有当过滤器映射完成之后，才会生效-->
  <filter-mapping>
    <!--filter-mapping下filter-name的值，要与filter下filter-name的值保持一致-->
    <filter-name>encodingFilter</filter-name>
    <!--前端-springmvc-后端-->
    <servlet-name>springmvc</servlet-name>
  </filter-mapping>
  <!--监听器listener-->
  <!--定义被监听的内容-->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <!--
      classpath:查找的范围比较小
      classpath*:查找的范围比较大
    -->
    <!--因为要被监听的内容在项目中，所以需要通过classpath的形式去获取到要被监听的文件的路径-->
    <param-value>classpath*:spring-context.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath*:springmvc.xml</param-value>
    </init-param>
    <!--运行项目时，会自动去加载后端的控制层-->
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <!--servlet-mapping下servlet-name的值，要与servlet下servlet-name的值保持一致-->
    <servlet-name>springmvc</servlet-name>
    <!--后端控制层方法的启动方式-->
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
</web-app>
